<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="ZWMReplacement.controller.OperationDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page >
		<customHeader>
			<Bar>
				<contentLeft>
					<Text text="Operation - {operationDetailModel>/Vornr}"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://edit" press="onPress" ariaLabelledBy="editButtonLabel"/>
					<Button icon="sap-icon://action" press="onClick" ariaLabelledBy="actionButtonLabel"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<l:Grid defaultSpan="L2 M2 S2" class="sapUiSmallMarginTop">
				<l:content>
					<Label text="Description"/>
					<Input id="name11" value="{operationDetailModel>/Ltxa1}" editable="false">
						<layoutData>
							<l:GridData span="XL1 L4 M4 S4"/>
						</layoutData>
					</Input>
					<Label text="Work Center" wrapping="true">
						<layoutData>
							<l:GridData span="S4" linebreakL="true" linebreakM="true" linebreakS="true"/>
						</layoutData>
					</Label>
					<Input id="name14" value="{operationDetailModel>/Arbpl}" editable="false">
						<layoutData>
							<l:GridData span="L4 M3 S3"/>
						</layoutData>
					</Input>
					<Label text="Wrk Ctr Plant" wrapping="true">
						<layoutData>
							<l:GridData span="L2"/>
						</layoutData>
					</Label>
					<Input id="name007" value="{operationDetailModel>/VWerks}" editable="false">
						<layoutData>
							<l:GridData span="L2 M1 S1"/>
						</layoutData>
					</Input>
					<Label text="Control Key" wrapping="true">
						<layoutData>
							<l:GridData span="S5" linebreakL="true" linebreakM="true" linebreakS="true"/>
						</layoutData>
					</Label>
					<Input id="name10" value="{operationDetailModel>/Steus}" editable="false">
						<layoutData>
							<l:GridData span="XL1 L4 M4 S4"/>
						</layoutData>
					</Input>
					<Label text="Sort Key" wrapping="true">
						<layoutData>
							<l:GridData span="XL1 L2 M4 S4"/>
						</layoutData>
					</Label>
					<Input id="name16" value="{operationDetailModel>/SortKey}" editable="false">
						<layoutData>
							<l:GridData span="L2"/>
						</layoutData>
					</Input>
					<Label text="Status" wrapping="true">
						<layoutData>
							<l:GridData span="S1" linebreakL="true" linebreakM="true" linebreakS="true"/>
						</layoutData>
					</Label>
					<Input id="name126" value="{operationDetailModel>/Status}" editable="false">
						<layoutData>
							<l:GridData span="L4"/>
						</layoutData>
					</Input>
				</l:content>
			</l:Grid>
			<Bar>
				<contentLeft>
					<Text text="Operation Notes"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://edit" press="onPress" ariaLabelledBy="editButtonLabel"/>
				</contentRight>
			</Bar>
			<Input id="txtoperationnotes" value="Steel Pole Inspection Steel Pole" editable="true">
				<layoutData>
					<l:GridData span="L4"/>
				</layoutData>
			</Input>
			<Bar>
				<contentLeft>
					<Button icon="sap-icon://begin" press="onPress" ariaLabelledBy="beginButtonLabel"/>
				</contentLeft>
				<contentMiddle>
					<Button icon="sap-icon://pause" press="onPress" ariaLabelledBy="pauseButtonLabel"/>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://accept" press="onPress" ariaLabelledBy="acceptButtonLabel"/>
				</contentRight>
			</Bar>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>